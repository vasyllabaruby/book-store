%main.container
  #slider.carousel.slide{"data-ride" => "carousel"}
    %ol.carousel-indicators
      %li.active{"data-slide-to" => "0", "data-target" => "#slider"}
      %li{"data-slide-to" => "1", "data-target" => "#slider"}
    .carousel-inner{:role => "listbox"}
      .item.active
        .row
          .col-sm-5
            .general-img-wrap
              %img.img-shadow.general-thumbnail-img{:alt => "design-book", :src => "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg"}/
          .col-sm-7
            .mb-60
              %h1 Real-Life Responsive Web Design
              %p.lead Smart front-end techniques and design patterns derived from real-life responsive projects
              %p.lead.small Vitaly Friedman, Daniel Mall,Vitaly Friedman
              .general-align
                %button.disabled.btn Buy Now
      .item
        .row
          .col-sm-5
            .general-img-wrap
              %img.img-shadow.general-thumbnail-img{:alt => "design-book", :src => "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg"}/
          .col-sm-7
            .mb-60
              %h1 Real-Life Responsive Web Design
              %p.lead Smart front-end techniques and design patterns derived from real-life responsive projects
              %p.lead.small Vitaly Friedman, Daniel Mall,Vitaly Friedman
              .general-align
                %button.btn.btn-primary= t('home.buy_now')
    %a.left.carousel-control{"data-slide" => "prev", :href => "#slider", :role => "button"}
      %span.icon-prev{"aria-hidden" => "true"}
      %span.sr-only Previous
    %a.right.carousel-control{"data-slide" => "next", :href => "#slider", :role => "button"}
      %span.icon-next{"aria-hidden" => "true"}
      %span.sr-only Next
